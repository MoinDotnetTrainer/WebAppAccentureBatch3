@page
@model WebAppCoreRazorPages.Pages.AnnotationsModel
@{
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Registration Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">


</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center">
                        <h4>Add Books</h4>
                        <h3>
                            <a href="/DisplayData" class="btn btn-primary float-end">Display Data</a>

                        </h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label asp-for="_ano.FirstName" class="form-label"></label>
                                <input type="text" class="form-control" id="fullname" placeholder="Enter Book Price" asp-for="_ano.FirstName">
                                <span asp-validation-for="_ano.FirstName" style="color:red"></span>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">LastName</label>
                                <input type="text" class="form-control" id="LastName" placeholder="Enter LastName" asp-for="_ano.LastName">
                                <span asp-validation-for="_ano.LastName" style="color:red"></span>
                            </div>



                            <div class="mb-3">
                                <label asp-for="_ano.Email" class="form-label"></label>
                                <input type="email" class="form-control" id="Email" placeholder="Enter a Email" asp-for="_ano.Email">
                                <span asp-validation-for="_ano.Email" style="color:red"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="_ano.Password" class="form-label"></label>
                                <input  class="form-control" id="Password" placeholder="Enter a Password" asp-for="_ano.Password">
                                <span asp-validation-for="_ano.Password" style="color:red"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="_ano.ConfirmPassword" class="form-label"></label>
                                <input  class="form-control" id="ConfirmPassword" placeholder="Enter a ConfirmPassword" asp-for="_ano.ConfirmPassword">
                                <span asp-validation-for="_ano.ConfirmPassword" style="color:red"></span>
                            </div>


                            <div class="mb-3">
                                <label for="Age" class="form-label">Age</label>
                                <input type="number" class="form-control" id="Age" placeholder="Enter a Enter" asp-for="_ano.Age">
                                <span asp-validation-for="_ano.Age" style="color:red"></span>
                            </div>

                            <div class="mb-3">
                                <label for="PhoneNumber" class="form-label">PhoneNumber</label>
                                <input type="text" class="form-control" id="PhoneNumber" placeholder="Enter a Enter" asp-for="_ano.PhoneNumber">
                                <span asp-validation-for="_ano.PhoneNumber" style="color:red"></span>
                            </div> 
                            
                            <div class="mb-3">
                                <label for="Gender" class="form-label">Gender</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="_ano.Gender" value="Male" id="genderMale" />
                                    <label class="form-check-label" for="genderMale">Male</label>

                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="_ano.Gender" value="Female" id="genderFemale" />
                                    <label class="form-check-label" for="genderFemale">Female</label>
                                </div>

                                <span asp-validation-for="_ano.Gender" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="Dept" class="form-label">Dept</label>
                                <select asp-for="_ano.Dept" class="form-control">
                                    <option value="0">
                                        --Select--
                                    </option>
                                    <option value="IT">
                                        IT
                                    </option>
                                    <option value="Sales">
                                        Sales
                                    </option>
                                </select>
                            </div>
                            <span asp-validation-for="_ano.Dept" class="text-danger"></span>

                           


                            <input type="submit" value="submit" name="submit" class="btn btn-primary w-100" />

                            <div class="mb-3">
                                @TempData["res"]
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }




    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
