@page
@model WebAppCoreRazorPages.Pages.BooksModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Registration Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header text-center">
                        <h4>Add Books</h4>
                        <h3>
                            <a href="/DisplayBooks" class="btn btn-primary float-end">Display Books</a>

                        </h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="mb-3">
                                <label for="fullname" class="form-label">BookName</label>
                                <input type="text" class="form-control" id="fullname" placeholder="Enter Book Price" asp-for="_Books.BookName">
                                <span asp-validation-for="_Books.BookName" style="color:red"></span>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Author</label>
                                <input type="text" class="form-control" id="email" placeholder="Enter Author" asp-for="_Books.Author">
                            </div>



                            <div class="mb-3">
                                <label for="Qty" class="form-label">Qty</label>
                                <input type="number" class="form-control" id="qty" placeholder="Enter a Qty" asp-for="_Books.Qty">
                            </div>


                            <div class="mb-3">
                                <label for="Qty" class="form-label">Issue Date</label>
                                <input type="date" class="form-control" id="date" placeholder="Enter a Enter" asp-for="_Books.IssueDate">
                            </div>

                            <div class="mb-3">
                                <label for="Qty" class="form-label">Books Status</label>

                                <select asp-for="_Books.Status" class="form-control">
                                    <option value="0">
                                        --Select--
                                    </option>
                                    <option value="true">
                                       Available
                                    </option>
                                    <option value="false">
                                        Not Available
                                    </option>
                                </select>
                                   </div>


                            <input type="submit" value="submit" name="submit" class="btn btn-primary w-100" />

                            <div class="mb-3">
                                @TempData["res"]
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
   
  

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
